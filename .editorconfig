# EditorConfig is awesome: https://EditorConfig.org
root = true

########## Global defaults ###############################################
[*]
charset                 = utf-8
end_of_line             = lf
insert_final_newline    = true
trim_trailing_whitespace= true
indent_style            = space
indent_size             = 2          # company‑wide default

########## Markdown #######################################################
[*.md]
trim_trailing_whitespace= false       # keep two spaces at EOL for <br/>

########## Python #########################################################
[*.py]
indent_size             = 4           # PEP 8

########## Makefile #######################################################
[Makefile]
indent_style            = tab
tab_width               = 2

########## Dockerfile #####################################################
[Dockerfile]
# Keep manual alignment; VS Code formatter still uses this width
indent_style            = space
indent_size             = 4
